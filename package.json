{
  "name": "yi-note",
  "version": "1.0.0",
  "description": "YiNote monorepo",
  "scripts": {
    "start": "lerna run start:dev --parallel",
    "dev:firefox": "lerna run dev:firefox --parallel",
    "build": "lerna run build",
    "build:ext:chromium": "lerna run --scope=@yi-note/extension build:chromium",
    "build:ext:firefox": "lerna run --scope=@yi-note/extension build:firefox",
    "bootstrap": "lerna bootstrap --hoist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuowu/yi-note.git"
  },
  "author": "Shuo Wu <wushuo2010@gmail.com>",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/shuowu/yi-note/issues"
  },
  "homepage": "https://www.yinote.co",
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
